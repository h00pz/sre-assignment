#cloud-config
package_update: true
package_upgrade: true

runcmd:
 - 'wget -P /tmp https://repo.zabbix.com/zabbix/3.4/ubuntu/pool/main/z/zabbix-release/zabbix-release_3.4-1+xenial_all.deb'
 - 'sudo dpkg -i /tmp/zabbix-release_3.4-1+xenial_all.deb'
 - 'sudo apt update'
 - 'sudo debconf-set-selections <<< \'mysql-server mysql-server/root_password password abc123456\''
 - 'sudo debconf-set-selections <<< \'mysql-server mysql-server/root_password_again password abc123456\''
 - 'apt install zabbix-server-mysql zabbix-frontend-php'
 - 'zcat /usr/share/doc/zabbix-server-mysql/create.sql.gz | mysql -uzabbix -p zabbix'

